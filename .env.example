# PowerAutomation 4.0 Environment Configuration
# 复制此文件为 .env 并填入实际值

# 基础配置
PA_DEBUG=false
PA_HOST=0.0.0.0
PA_PORT=8000
PA_LOG_LEVEL=INFO
PA_LOG_FILE=logs/powerautomation.log

# 并行处理配置
PA_MAX_CONCURRENT_TASKS=10
PA_TASK_TIMEOUT=300

# Claude API配置
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_MAX_TOKENS=4000

# OpenAI API配置（备用）
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Redis配置（用于任务队列）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# MCP协议配置
MCP_COORDINATOR_PORT=8001

# 数据库配置
DATABASE_URL=sqlite:///./powerautomation.db
DATABASE_ECHO=false

# 安全配置
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=8002

# 开发配置
ENABLE_RELOAD=false
ENABLE_CORS=true

